
{
  "name": "blood-cell-analyzer",
  "version": "1.0.0",
  "description": "Blood Cell Analyzer Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && concurrently \"cd .. && npm run dev\" \"electron .\"",
    "build": "cd .. && npm run build && electron-builder"
  },
  "build": {
    "appId": "com.bloodcellanalyzer.app",
    "productName": "Blood Cell Analyzer",
    "files": [
      "main.js",
      "preload.js",
      "../dist/**/*"
    ],
    "directories": {
      "output": "../electron-dist"
    },
    "mac": {
      "category": "public.app-category.medical"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest",
    "concurrently": "latest"
  }
}
