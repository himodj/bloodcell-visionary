
{
  "name": "blood-cell-analyzer",
  "version": "1.0.0",
  "description": "Blood Cell Analyzer Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.bloodcellvision.app",
    "productName": "BloodCellVision",
    "copyright": "Copyright Â© 2025 ibrahim ammar",
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "icon.png",
      "icon.ico",
      {
        "from": "../dist",
        "to": "dist",
        "filter": ["**/*"]
      }
    ],
    "extraResources": [
      {
        "from": "../model.h5",
        "to": "model.h5"
      },
      {
        "from": "../python",
        "to": "python"
      }
    ],
    "directories": {
      "output": "../electron-dist"
    },
    "mac": {
      "category": "public.app-category.medical",
      "icon": "icon.png",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "BloodCellVision",
      "license": "LICENSE.txt",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png",
      "category": "Medical"
    }
  },
  "author": "ibrahim ammar",
  "license": "ISC",
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "axios": "^1.8.3"
  }
}
